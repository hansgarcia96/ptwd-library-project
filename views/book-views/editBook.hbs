<h2> Edit: {{ theBook.title }} </h2>

<form action="/books/{{theBook._id}}/update" method="PUT">

  <label for="title"> Title </label>
  <input type="text" name = "title" id= "" value="{{ theBook.title }}">

  <label for="">Author</label>
  <select name="author" id="">

    {{#each allAuthors}}
      {{#if this.isWriter }}
        <option selected="selected" value="{{ this._id }}"> {{ this.firstName }} {{ this.lastName }} </option>
      {{/else}
      <option selected="" value="{{ this._id }}"> {{ this.firstName }} {{ this.lastName }} </option>
    {{/if}}
    {{/each}}
 
  </select> 

  <label for=""> Description </label>
  <input type="text" name = "description" id= "" value="{{ theBook.description }}">

  <label for=""> Rating </label>
  <input type="number" name = "rating" id= "rating" placeholder="1" value="{{ theBook.rating }}">
{{!-- 
  <label for="img"> Image URL </label>
  <input type="text" name = "imageUrl" id="img"> --}}

  <button> Update the Book </button>


</form>